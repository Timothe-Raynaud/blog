{% extends 'back/layouts/layout.html.twig' %}

{% set countValidatedUsers = 0 %}
{% for user in users %}
    {% if user.is_available %}
        {% set countValidatedUsers = countValidatedUsers + 1 %}
    {% endif %}
{% endfor %}

{% block main %}

    <div id="content">

        <div class="container-fluid">

            <div class="d-sm-flex align-items-center justify-content-between my-4">
                <h1 class="h3 mb-0 text-gray-800">Utilisateur - pannel</h1>
            </div>

            <div class="row">

                <div class="col-xl-2 col-md-4 mb-6 my-2">
                    <div class="card border-left-primary shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                        Nombre d'utilisateur :
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">{{ users|length }}</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fa-solid fa-user-plus"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-2 col-md-4 mb-6 my-2">
                    <div class="card border-left-success shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                        Utilisateur valide
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">
                                        {{ countValidatedUsers }}
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <i class="fa-solid fa-user-shield"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-12 my-4">
                    <table id="users-datatable" class="display" style="width:100%">
                        <thead>
                        <tr>
                            <th>Username</th>
                            <th>Login</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Valide</th>
                            <th>Autoriser/Bloquer</th>
                            <th>Infos</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{ user.username }}</td>
                                <td>{{ user.login }}</td>
                                <td>{{ user.email }}</td>
                                <td>{{ user.role }}</td>
                                <td>{{ user.is_available ? 'Oui' : 'Non' }}</td>
                                <td class="text-center">
                                    <a href="/admin-user-validated?{{ user.user_id }}" id="Autoriser"
                                       class="btn bg-success text-white" style="width: 40px; height: 40px;">
                                        <i class="fa-solid fa-check"></i>
                                    </a>
                                    <a href="/admin-user-block?{{ user.user_id }}" id="Bloquer"
                                       class="btn bg-danger text-white" style="width: 40px; height: 40px;">
                                        <i class="fa-solid fa-xmark"></i>
                                    </a>
                                </td>
                                <td class="text-center">
                                    <button type="button"
                                            class="btn text-primary"
                                            data-bs-toggle="modal"
                                            data-bs-target="#user-modal"
                                            data-bs-username= {{ user.username }}
                                    >
                                        <i class="fa-solid fa-magnifying-glass"></i>
                                    </button>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="user-modal" aria-labelledby="myModalLabel">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="myModalLabel"></h4>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form action="">
                        <label>Role :</label>
                        <select class="form-control" id="roleSelector">
                            <option>ADMIN</option>
                            <option>CREATOR</option>
                            <option>DEFAULT</option>
                        </select>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                    <button type="button" class="btn btn-primary">Enregistrer les modifications</button>
                </div>
            </div>
        </div>
    </div>

{% endblock %}