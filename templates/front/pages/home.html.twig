{% extends "front/layouts/layout.html.twig" %}

{% block title %}Accueil{% endblock %}
{% block header %}
    {% include 'front/layouts/_header.html.twig' with {
        'bandeau' : 'img/front/bandeau_home.jpg',
        'page_title' : 'Accueil',
        'subtitle_page' : 'Un blog conçu par Timothé Raynaud',
        'meta_title' : ''
    } %}
{% endblock %}

{% block main %}
    <div class="row justify-content-center">
        <div class="text-center pb-4 col-11 col-md-10 col-lg-6">
            <div class="text-start mb-5">
                <div class="row d-flex justify-content-between">
                    <div class="col-lg-6 col-11">
                        <h3 class="my-5">Présentation :</h3>
                        <p>
                            Lorem ipsum dolor sit amet, consectetur adipisicing elit. A, accusantium aliquid architecto blanditiis culpa cupiditate deleniti dicta distinctio dolores ducimus eius ex facilis in laborum, mollitia nam perferendis, sint voluptas!
                        </p>
                    </div>
                    <div class="col-lg-6 col-11">
                        <img src="img/front/moi.png" alt="" class="img-fluid">
                    </div>
                    <div class="text-center mt-5">
                        <a href="upload/CV_Raynaud_Timothe.pdf" class="btn btn-primary rounded shadow" target="_blank">Mon Curriculum Vitae</a>
                    </div>
                </div>
                <div>
                </div>
            </div>
            <div>
                <form action="" class="pb-4 text-start">
                    <h3 class="pb-3">Contactez moi :</h3>
                    <div class="pb-2">
                        <label for="" class="d-block">Nom :</label>
                        <input type="text" class="w-100">
                    </div>
                     <div class="pb-2">
                        <label for="" class="d-block">Prénom :</label>
                        <input type="text" class="w-100">
                    </div>
                    <div class="pb-2">
                        <label for="" class="d-block">Email :</label>
                        <input type="email" class="w-100">
                    </div>
                    <div class="pb-3">
                        <label for="" class="d-block">Message :</label>
                        <textarea class="w-100" name="message" rows="5" cols="50" maxlength="200"></textarea>
                    </div>
                    <div class="text-center">
                        <input type="submit" VALUE="Envoyer" class="btn btn-primary rounded shadow">
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}