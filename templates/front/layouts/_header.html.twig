{% block header %}
    <header class="masthead" style="background-image: url('img/front/bandeau.jpg')">
        <div class="container position-relative px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    <div class="site-heading">
                        <h1>{% block pageTitle %}{% endblock %}</h1>
                        <h2 class="subheading">{% block subTitlePage %}{% endblock %}</h2>
                        <span class="meta">{% block postedBy %}{% endblock %}</span>
                    </div>
                </div>
            </div>
        </div>
    </header>
{% endblock %}
